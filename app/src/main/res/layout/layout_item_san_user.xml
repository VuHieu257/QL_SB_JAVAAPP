<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewSan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/txtTenSan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Sân 1"
            android:textColor="#FF5722"
            android:textSize="25sp"></TextView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgSan"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/txtTenSan"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/imgsan1"
            app:shapeAppearanceOverlay="@style/circula1"></com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgSan"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Giá : 190.000 VNĐ - 240.000VNĐ"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>